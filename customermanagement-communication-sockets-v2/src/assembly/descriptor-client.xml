<assembly
    xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.3 http://maven.apache.org/xsd/assembly-1.1.3.xsd">
    <id>descriptor-client</id>
	<formats>
		<format>jar</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>${project.build.outputDirectory}</directory>
			<outputDirectory>/</outputDirectory>
			<excludes>
				<exclude>server/application</exclude>
				<exclude>server/application/Kunde.class</exclude>
				<exclude>server/application/ObjektContainer.class</exclude>
				<exclude>server/persistence/**</exclude>
				<exclude>server/SocketServer/Server.class</exclude>
			</excludes>
		</fileSet>
	</fileSets>
</assembly>