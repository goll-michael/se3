<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd"
	version="1.0">
	<!-- Der Name der PersistenceUnit "amWEB-Persistenz" wird in den EJBs AnzeigenBean 
		und KundenBean benutzt, um auf diese per JNDI zuzugreifen. -->
	<persistence-unit name="amWS-ET-Persistenz">
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		<jta-data-source>java:jboss/jdbc/amWS-ET-Datenquelle</jta-data-source>
		<properties>
			<property name="hibernate.dialect"
				value="org.hibernate.dialect.DerbyDialect" />
			<property name="hibernate.hbm2ddl.auto" value="update" />
			<property name="hibernate.show_sql" value="false" />
			<property name="hibernate.format_sql" value="false" />
		</properties>
	</persistence-unit>
</persistence>